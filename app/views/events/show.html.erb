<h1>Event Page</h1>

<article>
    <p><%= @event.name %></p>
    <p><%= @event.location %></p>
    <p><%= @event.description %></p>

    <p>Begins:
      <%= Time.zone.parse(@event.start_timewithzone).strftime('%a, %b %d, %I:%M%p') %>
    </p>
    <p>Ends:
      <%= Time.zone.parse(@event.end_timewithzone).strftime('%a, %b %d, %I:%M%p') %>
    </p>

    <% if @event.attendees.any? %>
      <p>Attendees</p>
      <% @event.attendees.each do |attendee| %>
        <p><%= attendee.username %></p>
      <% end %>
    <% end %>

    <p>Click below to see if joining an event works!</p>
    <% if @event.attendees.exists?(current_user.id) %>
      <%= button_to 'Leave Event', invitation_path,
          params: { event_id: @event.id }, method: :delete %>
    <% else %>
      <%= button_to 'Join Event', invitations_path, params: { event_id: @event.id } %>
    <% end %>
</article>
