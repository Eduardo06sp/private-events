<h2>Events Created</h2>
<ul>
  <% @user.created_events.each do |event| %>
    <% next if event.private && !user_signed_in? %>
    <% next unless (event.private && event.invited_users.include?(current_user.id.to_s)) ||
      event.creator_id == current_user.id %>

    <li><%= event.name %></li>
  <% end %>
</ul>

